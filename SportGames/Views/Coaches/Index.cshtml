@model IEnumerable<SportGames.Models.Coach>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @style = "color:white;" })
</p>

@using (Html.BeginForm("Index", "Coaches", FormMethod.Get))
{
    @Html.TextBox("Name", "", new { placeholder = "Name",@style = "color:black;" })
    @Html.TextBox("Wins", "", new { placeholder = "Wins", @style = "color:black;" })
    @Html.TextBox("Losses", "", new { placeholder = "Losses", @style = "color:black;" })
    <input type="submit" style="color:black" value="Search" />
}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Losses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgURL)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Losses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgURL)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CoachId }, new { @style = "color:white;" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CoachId }, new { @style = "color:white;" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CoachId }, new { @style = "color:white;" } )
                </td>
            </tr>
        }

    </table>
